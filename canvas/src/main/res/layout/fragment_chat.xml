<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.chat.ChatFragment"
    tools:viewBindingIgnore="false">

    <FrameLayout
        android:background="#e2e3e4"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_gravity="center"
            android:textSize="18sp"
            android:textColor="@color/grey_deep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="智能机器人" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg2"
        android:overScrollMode="never"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        tools:listitem="@layout/item_chat" />


    <LinearLayout
        android:id="@+id/activity_wechat_chat_layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="@drawable/input_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_wechat_chat_iv_voice"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?selectableItemBackground"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_voice"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <EditText
            android:id="@+id/activity_wechat_chat_et_msg"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:background="@null"
            android:imeOptions="actionSend"
            android:inputType="text"
            android:textCursorDrawable="@null" />

        <ImageView
            android:id="@+id/activity_wechat_chat_iv_emoji"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_emoji" />

        <ImageView
            android:id="@+id/activity_wechat_chat_btn_send"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_add_w" />
    </LinearLayout>

</LinearLayout>
