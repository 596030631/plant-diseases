<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/item_wechat_msg_layout_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_wechat_msg_iv_receiver_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icon_face_nomal" />

        <TextView
            android:id="@+id/item_wechat_msg_tv_receiver_msg"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/receive_msg_bg"
            android:gravity="center"
            android:minHeight="45dp"
            android:text="这是信息"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>


    <FrameLayout
        android:id="@+id/item_wechat_msg_layout_sender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/item_wechat_msg_tv_sender_msg"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="32dp"
            android:layout_toStartOf="@+id/item_wechat_msg_iv_sender_profile"
            android:background="@drawable/send_msg_bg"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:minHeight="45dp"
            android:padding="8dp"
            android:text="收到信息"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/item_wechat_msg_iv_sender_profile"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end|center_vertical"
            android:src="@drawable/icon_emoji" />

    </FrameLayout>

</LinearLayout>