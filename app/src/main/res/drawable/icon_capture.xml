<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval"
            android:useLevel="false">
            <size
                android:width="100dp"
                android:height="100dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>

    <item>
        <shape
            android:innerRadiusRatio="2.011"
            android:shape="ring"
            android:thicknessRatio="999"
            android:useLevel="false">
            <size
                android:width="100dp"
                android:height="100dp" />
            <stroke
                android:width="7dp"
                android:color="@color/grey" />
            <solid android:color="@color/grey" />
        </shape>
    </item>

    <item>
        <shape
            android:innerRadiusRatio="2.46"
            android:shape="ring"
            android:thicknessRatio="100"
            android:useLevel="false">
            <stroke
                android:width="1dp"
                android:color="@color/grey_deep" />
        </shape>
    </item>
</layer-list>